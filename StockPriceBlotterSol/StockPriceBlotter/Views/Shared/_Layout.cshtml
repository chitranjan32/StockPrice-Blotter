<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Stock Trading</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/themes/base/css")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header>
        <div class="content-wrapper">
            <div class="float-left">
                <p class="site-title">
                    @*<a href="@Url.Action("Index", "Stocks")">
                        <img src="~/Content/Images/Stock.jpg" alt="Stock" />
                    </a>*@

                </p>
            </div>
            <div class="float-right">
                 <nav>
                    <ul id="menu">
                        <li>@Html.ActionLink("Stock Price Blotter", "Index", "Stocks")</li>
                        <li>@Html.ActionLink("About", "About", "Stocks")</li>
                    </ul>
                </nav>
            </div>
        </div>
    </header>
    <div id="body">
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
    </div>
    <footer>
        <div class="content-wrapper">
            <div class="float-left">
                <p>&copy; @DateTime.Now.Year - Stock Trading Application</p>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/otf")
    @RenderSection("scripts", required: false)
</body>
</html>
